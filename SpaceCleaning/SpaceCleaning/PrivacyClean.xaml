<UserControl x:Class="SpaceCleaning.PrivacyClean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpaceCleaning"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource GrayDarkBrush}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  顶部操作栏  -->
        <StackPanel Grid.Row="0"
                    Height="100"
                    Margin="20"
                    Orientation="Horizontal">
            <Image Margin="10,0,0,0" Source="/Resources/garbage.png" />
            <TextBlock Width="380"
                       Margin="20,0,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Foreground="White"
                       Text="清理浏览器隐私" />
            <Button x:Name="SkipCleanTextBlock"
                    Width="60"
                    VerticalAlignment="Center"
                    Click="SkipClean_Click"
                    Content="暂不清理"
                    Style="{StaticResource TextButton}"
                    Visibility="Hidden" />
            <Button x:Name="ScanButton"
                    Width="100"
                    Height="40"
                    Click="Scan_Click"
                    Content="开始扫描"
                    Cursor="Hand"
                    Style="{StaticResource ScanButton}" />
        </StackPanel>

        <!--  中间分界线  -->
        <Border Grid.Row="1"
                Width="750"
                Background="{StaticResource GrayBrush}" />

        <!--  下方结果显示  -->
        <Border Grid.Row="2">
            <ListView x:Name="FilesListView"
                      Grid.Row="2"
                      Margin="25,20,25,0"
                      Foreground="White"
                      ItemsSource="{Binding ScannedFiles}"
                      Style="{StaticResource JunkFiles}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="100"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="名称" />
                        <GridViewColumn DisplayMemberBinding="{Binding FilePath}" Header="文件路径" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</UserControl>
