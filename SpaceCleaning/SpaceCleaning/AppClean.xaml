<UserControl x:Class="SpaceCleaning.AppClean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SpaceCleaning"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource GrayDarkBrush}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  顶部操作栏  -->
        <StackPanel Grid.Row="0"
                    Height="80"
                    Margin="20,10"
                    Orientation="Horizontal">
            <Image Margin="10,0,0,0" Source="/Resources/garbage.png" />

            <TextBlock Width="250"
                       Margin="20,-5,0,0"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Foreground="White"
                       Text="清理软件垃圾" />
            <Button x:Name="UploadButton"
                    Width="120"
                    Height="35"
                    Margin="20,0,20,0"
                    VerticalAlignment="Center"
                    Click="UploadDirectory_Click"
                    Content="上传目录"
                    Cursor="Hand"
                    Style="{StaticResource ScanButton}" />

            <Button x:Name="SkipCleanTextBlock"
                    Width="60"
                    VerticalAlignment="Center"
                    Click="SkipClean_Click"
                    Content="暂不清理"
                    Style="{StaticResource TextButton}"
                    Visibility="Hidden" />

            <Button x:Name="ScanButton"
                    Width="100"
                    Height="40"
                    Click="Scan_Click"
                    Content="开始扫描"
                    Cursor="Hand"
                    Style="{StaticResource ScanButton}" />
        </StackPanel>

        <!--  中间分界线1  -->
        <Border Grid.Row="1"
                Width="750"
                Background="{StaticResource GrayBrush}" />

        <!--  已上传目录显示区  -->
        <StackPanel Grid.Row="2" Margin="25,10">
            <TextBlock Margin="0,0,0,5"
                       Foreground="White"
                       Text="已上传目录" />

            <!--  可删除的目录列表  -->
            <ListView x:Name="UploadedListView"
                      Height="120"
                      Background="Transparent"
                      BorderThickness="0"
                      ItemsSource="{Binding UploadedDirectories}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Border x:Name="border">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverGray}" />
                                            <Setter TargetName="border" Property="BorderThickness" Value="2,0,0,1" />
                                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource GoldBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding Path}" />
                            <Button Grid.Column="1"
                                    Width="60"
                                    Margin="5,0"
                                    HorizontalAlignment="Right"
                                    Click="DeleteButton_Click"
                                    CommandParameter="{Binding Path}"
                                    Content="删除"
                                    Style="{StaticResource TextButton}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!--  中间分界线2  -->
        <Border Grid.Row="3"
                Width="750"
                Background="{StaticResource GrayBrush}" />

        <!--  扫描结果显示区  -->
        <Border Grid.Row="4">
            <ListView x:Name="FilesListView"
                      Margin="25,10,25,0"
                      Foreground="White"
                      ItemsSource="{Binding ScannedFiles}"
                      Style="{StaticResource JunkFiles}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="451"
                                        DisplayMemberBinding="{Binding FilePath}"
                                        Header="文件路径" />
                        <GridViewColumn Width="100"
                                        DisplayMemberBinding="{Binding FileSize}"
                                        Header="大小" />
                        <GridViewColumn Width="100"
                                        DisplayMemberBinding="{Binding FileType}"
                                        Header="类型" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</UserControl>
